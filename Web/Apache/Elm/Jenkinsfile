pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir './Web/Apache/Elm'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'elm make ./Web/Apache/Elm/src/Main.elm --optimize --output=main.js'
                sh 'uglifyjs --output main.min.js --compress --mangle -- main.js'
            }
        }
    }
}