pipeline {
    agent {
        docker {
            image 'node:16.17.1-alpine'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'node --version'
                sh 'npm install -g elm@0.19.1'
                sh 'npm install -g uglify-js'
                sh 'cd ./Web/Apache/Elm && elm make ./src/Main.elm --optimize --output=main.js && uglifyjs --output main.min.js --compress --mangle -- main.js'
            }
        }
    }
}